<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shubham.minorproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tracking_product_red"
        android:label="Product Tracker"
        android:roundIcon="@drawable/tracking_product_red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SearchActivity"
            android:label="Seach Product" />
        <activity
            android:name=".ProductDetailActivity"
            android:label="Detailed Product" />
        <activity
            android:name=".MainActivity"
            android:label="Tracking Orders"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchLinkActivity"></activity>
    </application>

</manifest>